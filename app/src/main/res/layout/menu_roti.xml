<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <!-- Menu Roti 1 -->
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:cardCornerRadius="8dp"
                android:background="#FEDF6F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#FEDF6F">

                    <ImageView
                        android:id="@+id/foto_roti"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/rotiselai"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_kategori"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/nama_roti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roti Lutut"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deskripsi_roti"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:text="Merupakan Roti dengan lutut yang masih fresh dari open." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/diskon_roti"
                                android:layout_width="104dp"
                                android:layout_height="wrap_content"
                                android:text="Rp 6.000"
                                android:textColor="@color/merah"
                                android:textStrikeThru="true"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/harga_roti"
                                android:layout_width="104dp"
                                android:layout_height="wrap_content"
                                android:paintFlags="strikeThru|antiAlias"
                                android:text="Rp 5.000"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:gravity="center" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock : "
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textColor="@color/black"
                                android:paintFlags="strikeThru"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/keranjang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/baseline_add_circle_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:onClick="tambahKeKeranjang"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tambahkan Menu Roti Lainnya -->

</LinearLayout>
