<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=""
    tools:context=".ShortsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/banner_orange"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logoyooks_200" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="T E N T A N G  K A M I"
                    android:textColor="#DE5725"
                    android:textSize="20sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Dedikasi dalam Menyajikan Roti Berkualitas"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/banner_orange"
                android:backgroundTint="#E45926"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/paragraf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="18dp"
                    android:text="Yooks Bakery adalah sebuah toko roti yang berdiri pada tahun 2019 di kota kecil di pinggiran kota Jember. Toko roti ini menyediakan berbagai macam roti, kue, dan pastry yang dibuat dengan bahan-bahan berkualitas tinggi dan proses pembuatan yang teliti. Dengan konsep yang modern namun tetap hangat dan ramah, Yooks Bakery menjadi tempat yang populer untuk menikmati makanan ringan dan minuman segar."
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/banner_orange"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/visi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="VISI"
                    android:textAlignment="center"
                    android:textColor="#E35926"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/isivisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Menjadikan Yooks Bakery menjadi toko roti terkemuka yang dikenal sebagai sumber roti dan produk roti berkualitas dan inovatif untuk memenuhi kebutuhan pelanggan dengan pelayanan terbaik."
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/banner_orange"
                android:backgroundTint="#E35926"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/misi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="MISI"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/isimisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Memberikan produk roti yang berkualitas tinggi dan lezat untuk memenuhi kebutuhan pelanggan dengan kepuasan maksimal,
Menggunakan bahan-bahan alami dan segar untuk menghasilkan roti yang sehat dan bergizi untuk kesehatan pelanggan,
Menerapkan inovasi terbaru dalam pembuatan roti dan produk roti terkait untuk memberikan pengalaman belanja yang menyenangkan dan menyegarkan bagi pelanggan."
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/banner_orange"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableTop="@drawable/loc"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="LOKASI"
                    android:textAlignment="center"
                    android:textColor="#E35926"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Jl. Melon 3 no. 5B, Krajan, Kec. Patrang, Kabupaten Jember, Jawa Timur 68111"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>

