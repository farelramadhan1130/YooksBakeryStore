<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutservice"
    tools:context=".ShortsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logoyooks_200"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yooks Bakery"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yooks Bakery adalah sebuah toko roti yang berdiri pada tahun 2019 di kota kecil di pinggiran kota Jember. Toko roti ini menyediakan berbagai macam roti, kue, dan pastry yang dibuat dengan bahan-bahan berkualitas tinggi dan proses pembuatan yang teliti. Dengan konsep yang modern namun tetap hangat dan ramah, Yooks Bakery menjadi tempat yang populer untuk menikmati makanan ringan dan minuman segar."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@id/title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"/>

            <TextView
                android:id="@+id/paragraf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'Dedikasi dalam Menyajikan Roti Berkualitas'"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/description"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"/>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

