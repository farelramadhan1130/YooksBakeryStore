<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SubscriptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginHorizontal="0dp"
        android:background="@drawable/rounded_box_top_service"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/servicedh" />
    </LinearLayout>

    <TextView
        android:id="@+id/service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Services"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:layout_marginHorizontal=""
        android:background="@drawable/rounded_box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop=""
            android:padding="16dp"
            android:text="Kami menawarkan berbagai layanan untuk memenuhi kebutuhan pelanggan yang mencari produk roti berkualitas tinggi. Beberapa layanan yang kami tawarkan meliputi penjualan roti segar dengan berbagai macam pilihan rasa dan topping, katering untuk acara-acara tertentu, serta pembuatan customized cake yang dapat disesuaikan dengan keinginan pelanggan. Dengan layanan-layanan yang berkualitas dan produk-produk yang lezat, kami siap memberikan pengalaman berbelanja roti yang menyenangkan bagi pelanggan di kota Jember."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Service Button"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
